package chapter03_SOLID원칙.exercise.ex05;


public class Employee {
	private String id;			// 아이디
	private String name;		// 이름
	private int workHours;		// 정상 작업시간
	private int overTimeHours;	// 잔업시간

	private PayManager payManager;
	
	
	
	public Employee(String id, String name, int workHours, int overTimeHours, PayManager payManager) {
		this.id = id;
		this.name = name;
		this.workHours = workHours;
		this.overTimeHours = overTimeHours;
		this.payManager = payManager;
	}



	// 임금계산
	public int calculatePay()
	{
		return payManager.calculatePay(this);
	}
	
	
	
}