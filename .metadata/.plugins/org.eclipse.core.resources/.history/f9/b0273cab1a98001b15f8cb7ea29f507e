package chapter05_스트래티지패턴.ch05_06.strategy;

import javax.swing.ImageIcon;
import javax.swing.JLabel;

public class RunningStrategy extends MovingStrategy{
	private String[] walkingImage = {"walk1.gif","walk2.gif"};
	
	@Override
	public void drawImages(JLabel lbl) {
		// TODO Auto-generated method stub
		lbl.setIcon(new ImageIcon("./src/walk1.gif"));
		while(true)
		{
			String[] path = walkingImage;
			for(int i=0;i<path.length;i++)
			{
				lbl.setIcon(new ImageIcon("./src/"+path[i]));
				try
				{
					Thread.sleep(100);
					
				}catch (InterruptedException e) {
					// TODO: handle exception
					e.printStackTrace();
				}
			}
		}
	}

}
