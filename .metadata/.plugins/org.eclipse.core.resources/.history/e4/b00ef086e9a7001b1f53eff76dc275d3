package chapter10_데커레이터패턴.ch10_06;

public class NaviDecorator extends CarOptionDecorator{
	private int airBagPrice;
	
	public NaviDecorator(CarComponent decoratedCar, int airBagPrice) {
		super(decoratedCar);
		this.airBagPrice = airBagPrice;
	}

	@Override
	public int getPrice() {
		return super.getPrice() + getAirBagPrice();
	}

	@Override
	public String getCarinfo() {
		return super.getCarinfo() + "with Air Bag";
	}

	private int getAirBagPrice()
	{
		return airBagPrice;
	}
	
}
