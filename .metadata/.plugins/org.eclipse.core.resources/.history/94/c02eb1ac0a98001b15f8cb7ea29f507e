package chapter05_스트래티지패턴.ch05_05;

import chapter05_스트래티지패턴.ch05_05.strategy.direction.HorizonalMoveStrategy;
import chapter05_스트래티지패턴.ch05_05.strategy.direction.VerticalMoveStrategy;
import chapter05_스트래티지패턴.ch05_05.strategy.draw.RedDrawStrategy;

public class Client {
	private static final int INIT_LOCATION[] = {50,100,150};
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Ball[] balls = new Ball[3];
		for(int i=0;i<balls.length;i++)
		{
			balls[i] = new Ball(INIT_LOCATION[i], INIT_LOCATION[i]);
//			balls[i].setDirectionStrategy(new HorizonalMoveStrategy());
			balls[i].setDirectionStrategy(new VerticalMoveStrategy());
			balls[i].setDrawStrategy(new RedDrawStrategy());
			
			balls[i].start();
		}
		new BallFrame(balls);
		
		
	}

}
